    "react": "link:@formkit/auto-animate/react",
    "tslog": "^3.3.3"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.3.0",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
