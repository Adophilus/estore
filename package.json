{
  "name": "estore-2",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start-all": "bin/start-all.sh",
    "dev": "vite --port 3000",
    "build": "tsc && vite build --outDir build",
    "preview": "vite preview",
    "format:watch": "cd .scripts && pnpm format:watch ..",
    "db:start": "env $(cat .env | xargs) bin/pocketbase serve --http 0.0.0.0:8090 --dir .data/pb_data --encryptionEnv=POCKETBASE_ENCRYPTION_KEY",
    "frontend:dev": "pnpm format:watch & pnpm db:start & pnpm dev",
    "backend:dev": "nodemon --config nodemon.json",
    "backend:dev:test": "nodemon --config tests/nodemon.json",
    "backend:test": "vitest --run",
    "backend:test:watch": "vitest"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "http-status-codes": "^2.2.0",
    "jet-logger": "^1.2.2",
    "pocketbase": "0.4.0",
    "preact": "^10.9.0",
    "preact-async-route": "^2.2.1",
    "preact-router": "^4.1.0",
    "pug": "^3.0.2",
    "react": "link:@formkit/auto-animate/react",
    "tslog": "^3.3.3"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.3.0",
    "@prettier/plugin-pug": "^2.2.0",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/chai": "^4.3.3",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.30",
    "@types/jquery": "^3.5.14",
    "@types/node": "^18.7.1",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^8.23.0",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4",
    "vite": "^3.0.0",
    "vitest": "^0.21.1"
  }
}
